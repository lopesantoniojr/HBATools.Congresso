@model IEnumerable<HBATools.Congresso.MVVM.PessoaJuridicaModel>


@{
    ViewBag.Title = "Lista de Empresas";
}

<h2>Empresas</h2>

<table class="table table-hover">
    <tr>
        <th>
            CNPJ
        </th>
        <th>
            Nome Fantasia
        </th>
        <th>
            Ações
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome_fantasia)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.id }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.id })
        </td>
    </tr>
}

</table>
